{{> layout/header}}

<div class="container p-5">

    <!-- 게시글 목록 -->
    {{#boardList}}
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title mb-3">{{title}}</h4>
                <p class="text-muted">작성자: {{authorName}}</p>
                <a href="/board/{{id}}" class="btn btn-primary">상세보기</a>
            </div>
        </div>
    {{/boardList}}

    <!-- 게시글이 없을 때 -->
    {{^boardList}}
        <div class="alert alert-info text-center">
            등록된 게시글이 없습니다.
        </div>
    {{/boardList}}

    <!-- 글쓰기 버튼 (로그인한 경우만 표시) -->
    {{#sessionUser}}
        <div class="d-flex justify-content-end mb-3">
            <a href="/board/save-form" class="btn btn-success">글쓰기</a>
        </div>
    {{/sessionUser}}

    <!-- 페이지네이션 (나중에 동적으로 구현) -->
    <ul class="pagination d-flex justify-content-center">
        {{#hasPrevious}}
            <li class="page-item">
                <a class="page-link" href="/?page={{prevPage}}">Previous</a>
            </li>
        {{/hasPrevious}}
        {{^hasPrevious}}
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        {{/hasPrevious}}

        <li class="page-item active">
            <a class="page-link" href="#">{{displayPage}} / {{totalPages}}</a>
        </li>

        {{#hasNext}}
            <li class="page-item">
                <a class="page-link" href="/?page={{nextPage}}">Next</a>
            </li>
        {{/hasNext}}
        {{^hasNext}}
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
        {{/hasNext}}
    </ul>
</div>

{{> layout/footer}}